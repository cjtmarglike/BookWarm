<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.book.warm.mapper.MsgMapper">
	
	<!-- 아직은 웹소켓 안씀. 그저 불러오기와 글쓰기 저장만 할거임  -->
	<!-- 쪽지 리스트 불러오기  -->
	<select id="msglist" resultType="com.book.warm.vo.MsgTableVO">
	select * from msg_table
	order by msg_no
	</select>
	
	<!-- 쪽지보내기(대폭수정해야할 항목들)  -->
  	<insert id = "msginsert">
  	 insert into msg_table(msg_no, msg_send_id, msg_get_id, msg_title, msg_content)
		values(
		msg_table_nextval, #{msg_no}, #{msg_send_id}, #{msg_get_id}, #{msg_title}, #{msg_content})
 	</insert> 
	
	<!-- 쪽지조회  -->
	<select id="msgread" resultType="com.book.warm.vo.MsgTableVO">
	select * from msg_table where msg_no = #{msg_no}
	</select>
	
	<!-- 쪽지삭제  -->
	<delete id="msgdelete">
	delete from msg_table where msg_no = #{msg_no}
	</delete>

	<!-- 페이징 처리  -->
	<!-- <select id="msgpaging" resultType="com.book.warm.vo.MsgTableVO">
	select msg_no, msg_send_id, msg_get_id, msg_title, msg_content
	</select> -->
	
</mapper>

